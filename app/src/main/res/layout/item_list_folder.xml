<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_folder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <!-- 图片 -->
    <ImageView
        android:id="@+id/item_list_folder_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/folder_fill1_wght400_grad0_opsz32">
    </ImageView>

    <!--    左边数据布局-->
    <TextView
        android:id="@+id/item_list_folder_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/item_list_folder_picture"
        android:text="@string/folder_name"
        android:textStyle="bold">
    </TextView>
</RelativeLayout>